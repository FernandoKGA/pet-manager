<%= form_with(model: [@pet, medical_appointment], local: true) do |f| %>
  <% if @medical_appointment.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@medical_appointment.errors.count, "erro") %>:</h4>
      <ul>
        <% @medical_appointment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :appointment_date, "Data e hora da Consulta", class: "form-label" %>
    <%= f.datetime_field :appointment_date, class: 'form-control' %>
  </div>

 <div class="mb-3">
   <%= f.label :veterinarian_name, "Nome do Veterinário", class: "form-label" %>
   <%= f.text_field :veterinarian_name %>
 </div>

 <div class="mb-3">
   <%= f.label :clinic_address, "Endereço da Clínica", class: "form-label" %>
   <%= f.text_area :clinic_address, class: 'form-control', rows: 2 %>
 </div>

 <div class="mb-3">
   <%= f.label :notes, "Observação", class: "form-label" %>
   <%= f.text_area :notes, class: 'form-control', rows: 3 %>
 </div>

  <div class="d-grid mt-4">
    <%= f.submit "Salvar Consulta", class: "btn btn-primary-custom btn-lg" %>
  </div>
<% end %>
