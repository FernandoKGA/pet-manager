<%= form_with(model: [@pet, @vaccination], local: true, class: "vaccine-form") do |f| %>
  <% if f.object.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Oops!</h4>
      <p>Houve alguns erros que impediram de salvar:</p>
      <hr>
      <ul>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label fw-bold" do %>
      Nome da vacina<span style="color: red;">*</span>
    <% end %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :applied_date, class: "form-label fw-bold" do %>
      Data de vacinação <span style="color: red;">*</span>
    <% end %>
    <%= f.date_field :applied_date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :applied_by, "Responsável", class: "form-label fw-bold" %>
    <%= f.text_field :applied_by, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :applied, class: "form-check-input" %>
    <%= f.label :applied, "Aplicada", class: "form-check-label fw-bold" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Salvar", class: "btn-primary-custom" %>
  </div>
<% end %>