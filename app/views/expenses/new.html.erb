<h1>Registrar gasto</h1>

<%= form_with(model: @expense, local: true) do |f| %>
  <div>
    <%= f.label :amount, "Valor" %>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

  <div>
    <%= f.label :category, "Categoria" %>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label :date, "Data" %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :pet_id, "Pet" %>
    <%= f.collection_select :pet_id, @pets, :id, :name %>
  </div>

  <%= f.submit "Salvar" %>
<% end %>
