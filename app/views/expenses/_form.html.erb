<% modal_mode = local_assigns.fetch(:modal, false) %>

<%= form_with(model: expense, class: "needs-validation") do |f| %>
  <% if expense.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :amount, class: "form-label" do %>
      Valor <span class="text-danger">*</span>
    <% end %>
    <div class="input-group">
      <span class="input-group-text">R$</span>
      <%= f.number_field :amount, step: 0.01, class: "form-control mb-0 #{'is-invalid' if expense.errors[:amount].any?}", placeholder: "0,00" %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :category, class: "form-label" do %>
      Categoria <span class="text-danger">*</span>
    <% end %>
    <%= f.select :category, 
      options_for_select([
        ['Alimentação', 'alimentacao'],
        ['Veterinário', 'veterinario'],
        ['Higiene', 'higiene'],
        ['Brinquedos', 'brinquedos'],
        ['Outros', 'outros']
      ], expense.category),
      { include_blank: "Selecione..." }, 
      class: "form-select #{'is-invalid' if expense.errors[:category].any?}" %>
  </div>
  <div class="mb-3">
    <%= f.label :pet_id, class: "form-label" do %>
      Pet <span class="text-danger">*</span>
    <% end %>
    <%= f.collection_select :pet_id, pets, :id, :name, { prompt: "Selecione o Pet" }, { id: "expense_pet_select", class: "form-select #{'is-invalid' if expense.errors[:pet_id].any?}" } %>
  </div>
  <div class="mb-3">
    <%= f.label :date, class: "form-label" do %>
      Data <span class="text-danger">*</span>
    <% end %>
    <%= f.date_field :date, value: (expense.date || Date.current), class: "form-control #{'is-invalid' if expense.errors[:date].any?}" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, "Descrição (Opcional)", class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Detalhes do gasto..." %>
  </div>
  <div class="<%= modal_mode ? 'modal-footer px-0 pb-0' : 'd-flex justify-content-end mt-3' %>">
    <% unless modal_mode %>
      <%= link_to "Cancelar", expenses_path, class: "btn btn-secondary me-2" %>
    <% end %>
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
