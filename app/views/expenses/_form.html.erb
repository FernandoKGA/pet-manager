<%= form_with(model: expense, url: expenses_path, local: true) do |f| %>
  <div>
    <%= f.label :amount, "Valor" %><br>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

<div>
  <%= f.label :category, "Categoria" %><br>
  <%= f.select :category, 
        options_for_select([
          ['Alimentação', 'alimentacao'],
          ['Veterinário', 'veterinario'],
          ['Higiene', 'higiene'],
          ['Brinquedos', 'brinquedos'],
          ['Outros', 'outros']
        ], expense.category),
        {}, 
        class: "form-select" %>
</div>

  <div>
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :date, "Data" %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :pet_id, "Pet" %><br>
    <%= f.collection_select :pet_id, pets, :id, :name, {}, { id: "expense_pet_select" } %>
  </div>

  <div style="margin-top: 1rem;">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
