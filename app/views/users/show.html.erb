
<%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
<div class="dashboard-container">

  <!-- Card de Boas-vindas -->
  <div class="welcome-card">
    <h1 class="welcome-title">
      Bem-vindo, <%= current_user.first_name %> <%= current_user.last_name %>! 👋
    </h1>
    <p class="welcome-subtitle">
      Estamos felizes em ter você AUqui 🎉
    </p>
    <%= button_to 'Editar cadastro',
              edit_user_path(@user),
              method: :get,
              form: { style: 'display:inline' },
              style: "padding: 10px 16px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; text-decoration: none;" %>

      <%= link_to "Cadastrar pet", new_pet_path, class: "btn-secondary" %>
    </div>
  </div>

  <!-- Seção dos Pets -->
  <div class="pets-section">
    <div class="pets-header">
      <div>
        <h2 class="pets-title">🐾 Meus Pets</h2>
        <p class="pets-subtitle">Aqui estão seus pets cadastrados</p>
      </div>
      <div class="pets-counter">
        <%= @pets.count %> <%= @pets.count == 1 ? 'pet' : 'pets' %>
      </div>
    </div>

    <% if @pets.present? %>
      <div class="pets-grid">
        <% @pets.each do |pet| %>
          <div class="pet-card">
            
            <!-- Decoração -->
            <div class="pet-card-decoration"></div>
            
            <!-- Conteúdo -->
            <div class="pet-card-content">
              <div class="pet-avatar">
                🐶
              </div>
              
              <h3 class="pet-name">
                <%= pet.name %>
              </h3>
              
              <p class="pet-info">
                <%= pet.species %> • <%= pet.breed || 'SRD' %>
              </p>
            </div>

            <!-- Botão Editar -->
            <div class="pet-card-footer">
              <%= link_to "✏️ Editar", edit_pet_path(pet), class: "btn-edit" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">🐾</div>
        <p class="empty-state-text">
          Você ainda não cadastrou nenhum pet.
        </p>
        <p class="empty-state-subtext">
          Clique em "Cadastrar pet" para adicionar seu primeiro amiguinho!
        </p>
      </div>
    <% end %>
  </div>

</div>
