<%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
<div class="dashboard-container">

  <!-- Card de Boas-vindas -->
  <div class="welcome-card">
    <h1 class="welcome-title">
      Bem-vindo, <%= current_user.first_name %> <%= current_user.last_name %>! üëã
    </h1>
    <p class="welcome-subtitle">
      Estamos felizes em ter voc√™ AUqui üéâ
    </p>
    <div class="welcome-actions">
      <%= button_to 'Editar cadastro',
                edit_user_path(@user),
                class: 'btn-primary',
                method: :get %>
      <%= link_to "Cadastrar pet", new_pet_path, class: "btn-secondary" %>
    </div>
  </div>

  <!-- Se√ß√£o dos Pets -->
  <div class="pets-section">
    <div class="pets-header">
      <div>
        <h2 class="pets-title">üêæ Meus Pets</h2>
        <p class="pets-subtitle">Aqui est√£o seus pets cadastrados</p>
      </div>
      <div class="pets-counter">
        <%= @pets.count %> <%= @pets.count == 1 ? 'pet' : 'pets' %>
      </div>
    </div>

    <% if @pets.present? %>
      <div class="pets-grid">
        <% @pets.each do |pet| %>
          <div class="pet-card">
            
            <!-- Decora√ß√£o -->
            <div class="pet-card-decoration"></div>
            
            <!-- Conte√∫do Principal -->
            <div class="pet-card-content">
              <div class="pet-avatar">
                üê∂
              </div>
              
              <h3 class="pet-name">
                <%= pet.name %>
              </h3>
              
              <p class="pet-info">
                <%= pet.species %> ‚Ä¢ <%= pet.breed || 'SRD' %>
              </p>
            </div>

            <!-- Se√ß√£o de Medicamentos -->
            <div class="pet-medications-section">
              <div class="medications-header">
                <h4 class="medications-title">üíä Medicamentos</h4>
                <span class="medications-count">
                  <%= pet.medications.count %>
                </span>
              </div>

              <% if pet.medications.any? %>
                <div class="medications-list">
                  <% pet.medications.each do |medication| %>
                    <div class="medication-item">
                      <div class="medication-info">
                        <p class="medication-name"><strong><%= medication.name %></strong></p>
                        <p class="medication-dosage"><%= medication.dosage %> ‚Ä¢ <%= medication.frequency %></p>
                      </div>
                      <div class="medication-actions">
                        <%= link_to "‚úèÔ∏è", edit_pet_medication_path(pet, medication), class: "btn-small btn-edit", title: "Editar" %>
                        <%= link_to "üóëÔ∏è", pet_medication_path(pet, medication), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-small btn-delete", title: "Excluir" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="medications-empty">
                  <p class="medications-empty-text">Nenhum medicamento registrado</p>
                </div>
              <% end %>

              <%= link_to "+ Adicionar Medicamento", new_pet_medication_path(pet), class: "btn-add-medication" %>
            </div>

            <!-- Bot√µes de A√ß√£o -->
            <div class="pet-card-footer">
              <%= link_to "‚úèÔ∏è Editar Pet", edit_pet_path(pet), class: "btn-edit" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">üêæ</div>
        <p class="empty-state-text">
          Voc√™ ainda n√£o cadastrou nenhum pet.
        </p>
        <p class="empty-state-subtext">
          Clique em "Cadastrar pet" para adicionar seu primeiro amiguinho!
        </p>
      </div>
    <% end %>
  </div>

</div>

<style>
  .pet-medications-section {
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #f0f0f0;
  }

  .medications-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }

  .medications-title {
    font-size: 14px;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .medications-count {
    background-color: #e8f4f8;
    color: #0066cc;
    border-radius: 12px;
    padding: 2px 8px;
    font-size: 12px;
    font-weight: 600;
  }

  .medications-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 10px;
    max-height: 200px;
    overflow-y: auto;
  }

  .medication-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 6px;
    border-left: 3px solid #0066cc;
  }

  .medication-info {
    flex: 1;
  }

  .medication-name {
    font-size: 13px;
    margin: 0 0 3px 0;
    color: #333;
  }

  .medication-dosage {
    font-size: 12px;
    margin: 0;
    color: #666;
  }

  .medication-actions {
    display: flex;
    gap: 6px;
  }

  .btn-small {
    padding: 4px 8px;
    font-size: 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-edit {
    background-color: #fff3cd;
    color: #856404;
  }

  .btn-edit:hover {
    background-color: #ffe69c;
  }

  .btn-delete {
    background-color: #f8d7da;
    color: #721c24;
  }

  .btn-delete:hover {
    background-color: #f5c6cb;
  }

  .medications-empty {
    text-align: center;
    padding: 8px;
    background-color: #f9f9f9;
    border-radius: 6px;
  }

  .medications-empty-text {
    font-size: 12px;
    color: #999;
    margin: 0;
  }

  .btn-add-medication {
    display: block;
    width: 100%;
    padding: 8px;
    text-align: center;
    font-size: 12px;
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-add-medication:hover {
    background-color: #c3e6cb;
    color: #155724;
  }

  .pet-card-footer {
    display: flex;
    gap: 8px;
    margin-top: 15px;
  }

  .btn-view {
    flex: 1;
    padding: 8px;
    text-align: center;
    font-size: 12px;
    background-color: #e7e7ff;
    color: #0066cc;
    border: 1px solid #b3b3ff;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-view:hover {
    background-color: #d0d0ff;
  }
</style>