<%= stylesheet_link_tag "medications", "data-turbo-track": "reload" %>
<div class="dashboard-container">

  <!-- Card de Boas-vindas -->
  <div class="welcome-card">
    <h1 class="welcome-title">
      Bem-vindo, <%= current_user.first_name %> <%= current_user.last_name %>! 👋
    </h1>
    <p class="welcome-subtitle">
      Estamos felizes em ter você AUqui 🎉
    </p>
    <div class="welcome-actions">
      <%= button_to 'Editar cadastro',
                edit_user_path(@user),
                class: 'btn-primary',
                method: :get %>
      <%= link_to "Cadastrar pet", new_pet_path, class: "btn-secondary" %>
    </div>
  </div>

  <!-- Seção dos Pets -->
  <div class="pets-section">
    <div class="pets-header">
      <div>
        <h2 class="pets-title">🐾 Meus Pets</h2>
        <p class="pets-subtitle">Aqui estão seus pets cadastrados</p>
      </div>
      <div class="pets-counter">
        <%= @pets.count %> <%= @pets.count == 1 ? 'pet' : 'pets' %>
      </div>
    </div>

    <% if @pets.present? %>
      <div class="pets-grid">
        <% @pets.each do |pet| %>
          <div class="pet-card">
            
            <!-- Decoração -->
            <div class="pet-card-decoration"></div>
            
            <!-- Conteúdo Principal -->
            <div class="pet-card-content">
              <div class="pet-avatar">
                🐶
              </div>
              
              <h3 class="pet-name">
                <%= pet.name %>
              </h3>
              
              <p class="pet-info">
                <%= pet.species %> • <%= pet.breed || 'SRD' %>
              </p>
            </div>

            <!-- Seção de Medicamentos -->
            <div class="pet-medications-section">
              <div class="medications-header">
                <h4 class="medications-title">💊 Medicamentos</h4>
                <span class="medications-count">
                  <%= pet.medications.count %>
                </span>
              </div>

              <% if pet.medications.any? %>
                <div class="medications-list">
                  <% pet.medications.each do |medication| %>
                    <div class="medication-item">
                      <div class="medication-info">
                        <p class="medication-name"><strong><%= medication.name %></strong></p>
                        <p class="medication-dosage"><%= medication.dosage %> • <%= medication.frequency %></p>
                      </div>
                      <div class="medication-actions">
                        <%= link_to "✏️", edit_pet_medication_path(pet, medication), class: "btn-small btn-edit", title: "Editar" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="medications-empty">
                  <p class="medications-empty-text">Nenhum medicamento registrado</p>
                </div>
              <% end %>
              <%= link_to "+ Adicionar Medicamento", new_pet_medication_path(pet), class: "btn-add-medication" %>
            </div>

            <!-- Botões de Ação -->
            <div class="pet-card-footer">
              <%= link_to "✏️ Editar Pet", edit_pet_path(pet), class: "btn-edit" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">🐾</div>
        <p class="empty-state-text">
          Você ainda não cadastrou nenhum pet.
        </p>
        <p class="empty-state-subtext">
          Clique em "Cadastrar pet" para adicionar seu primeiro amiguinho!
        </p>
      </div>
    <% end %>
  </div>

</div>