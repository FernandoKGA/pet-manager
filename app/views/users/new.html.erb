<div class="registration-container">
  <h1>Registre-se</h1>
  <p>Insira seus dados para criar uma conta.</p>

  <%= form_with(model: @user, url: "/users") do |form| %>
    <div class="form-group">
      <%= form.label :first_name, 'Nome' %>
      <%= form.text_field :first_name, required: true, placeholder: 'Seu nome' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, 'Sobrenome' %>
      <%= form.text_field :last_name, required: true, placeholder: 'Seu sobrenome' %>
    </div>

    <div class="form-group">
      <%= form.label :email, 'Email' %>
      <%= form.text_field :email, required: true, placeholder: 'seu@email.com' %>
    </div>

    <div class="form-group">
      <%= form.label :password, 'Senha' %>
      <%= form.password_field :password, required: true, placeholder: 'MÃ­nimo de 6 caracteres' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, 'Confirme sua senha' %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Registrar' %>
    </div>
  <% end %>
</div>